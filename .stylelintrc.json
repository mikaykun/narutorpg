{
    "extends": "stylelint-config-standard-scss",
    "plugins": [
        "stylelint-scss",
        "stylelint-order"
    ],
    "rules": {
        "order/order": [
            "custom-properties",
            "declarations"
        ],
        "order/properties-order": [
            "position",
            "z-index",
            "top",
            "bottom",
            "left",
            "right",
            "float",
            "clear",
            "display",
            "justify-content",
            "align-items",
            "align-content",
            "gap",
            "row-gap",
            "column-gap",
            "opacity",
            "transform",
            "overflow",
            "animation",
            "transition",
            "margin",
            "margin-top",
            "margin-right",
            "margin-bottom",
            "margin-left",
            "box-shadow",
            "border",
            "width",
            "height",
            "padding",
            "padding-top",
            "padding-right",
            "padding-bottom",
            "padding-left",
            "background",
            "background-color",
            "background-image",
            "font-size",
            "line-height",
            "font-family",
            "font-weight",
            "font-style",
            "text-align",
            "text-transform",
            "word-spacing",
            "color"
        ]
    }
}
